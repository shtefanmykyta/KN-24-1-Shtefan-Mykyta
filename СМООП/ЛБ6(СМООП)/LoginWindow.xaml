<Window x:Class="Lab6.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизація" Height="405" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource PrimaryBackground}">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Система авторизації" 
                   FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextColor}"
                   HorizontalAlignment="Center" Margin="0,0,0,30"/>

        <!-- Форма логина -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="Логін" FontSize="14" Foreground="{StaticResource TextColor}"
                       Margin="0,0,0,5"/>
            <TextBox x:Name="LoginTextBox" Style="{StaticResource InputTextBoxStyle}"/>

            <TextBlock Text="Пароль" FontSize="14" Foreground="{StaticResource TextColor}"
                       Margin="0,15,0,5"/>
            <PasswordBox x:Name="PasswordBox" Style="{StaticResource InputPasswordStyle}"/>

            <TextBlock x:Name="ErrorTextBlock" Style="{StaticResource ErrorTextStyle}"
                       Text="" TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="LoginButton" Content="Увійти" 
                    Style="{StaticResource PrimaryButtonStyle}"
                    Click="LoginButton_Click" Width="120"/>
            <Button x:Name="RegisterButton" Content="Реєстрація" 
                    Style="{StaticResource PrimaryButtonStyle}"
                    Click="RegisterButton_Click" Width="120"/>
        </StackPanel>

        <!-- Счетчик пользователей -->
        <TextBlock x:Name="UserCountTextBlock" Grid.Row="3"
                   Text="Користувачів: 0" Foreground="{StaticResource AccentColor}"
                   HorizontalAlignment="Center" Margin="0,10,0,0"/>
    </Grid>
</Window>

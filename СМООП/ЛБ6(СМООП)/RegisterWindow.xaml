<Window x:Class="Lab6.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Реєстрація" Height="521" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource PrimaryBackground}">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Реєстрація нового користувача" 
                   FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextColor}"
                   HorizontalAlignment="Center" Margin="0,0,0,30"/>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Логін" FontSize="14" Foreground="{StaticResource TextColor}"
                       Margin="0,0,0,5"/>
            <TextBox x:Name="LoginTextBox" Style="{StaticResource InputTextBoxStyle}"/>

            <TextBlock Text="Пароль" FontSize="14" Foreground="{StaticResource TextColor}"
                       Margin="0,15,0,5"/>
            <PasswordBox x:Name="PasswordBox" Style="{StaticResource InputPasswordStyle}"/>

            <TextBlock Text="Підтвердіть пароль" FontSize="14" Foreground="{StaticResource TextColor}"
                       Margin="0,15,0,5"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Style="{StaticResource InputPasswordStyle}"/>

            <TextBlock Text="ПІБ" FontSize="14" Foreground="{StaticResource TextColor}"
                       Margin="0,15,0,5"/>
            <TextBox x:Name="FullNameTextBox" Style="{StaticResource InputTextBoxStyle}"/>

            <TextBlock x:Name="ErrorTextBlock" Style="{StaticResource ErrorTextStyle}"
                       Text="" TextWrapping="Wrap"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="0,30,0,0">
            <Button x:Name="RegisterButton" Content="Зареєструватись" 
                    Style="{StaticResource PrimaryButtonStyle}"
                    Click="RegisterButton_Click" Width="140"/>
            <Button x:Name="CancelButton" Content="Скасувати" 
                    Style="{StaticResource PrimaryButtonStyle}"
                    Click="CancelButton_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window>

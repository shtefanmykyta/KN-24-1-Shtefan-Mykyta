<Window x:Class="Lab5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Калькулятор" Height="400" Width="300" 
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Дисплей -->
        <TextBox x:Name="HistoryTextBox" Grid.Row="0" 
                 IsReadOnly="True" FontSize="14" Height="40" 
                 VerticalContentAlignment="Center" Margin="0,0,0,5"
                 Background="#F0F0F0" BorderBrush="#CCCCCC"/>
        <TextBox x:Name="CurrentTextBox" Grid.Row="1" 
                 IsReadOnly="True" FontSize="20" Height="60" 
                 VerticalContentAlignment="Center"
                 Background="White" BorderBrush="#CCCCCC"/>

        <!-- Кнопки -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Строка 1 -->
            <Button x:Name="MC" Grid.Row="0" Grid.Column="0" Content="MC" 
                    Click="MemoryButton_Click" Tag="MC"/>
            <Button x:Name="MR" Grid.Row="0" Grid.Column="1" Content="MR" 
                    Click="MemoryButton_Click" Tag="MR"/>
            <Button x:Name="MS" Grid.Row="0" Grid.Column="2" Content="MS" 
                    Click="MemoryButton_Click" Tag="MS"/>
            <Button x:Name="MPlus" Grid.Row="0" Grid.Column="3" Content="M+" 
                    Click="MemoryButton_Click" Tag="M+"/>

            <!-- Строка 2 -->
            <Button Content="C" Grid.Row="1" Grid.Column="0" 
                    Click="CButton_Click" Background="#FF6B6B"/>
            <Button Content="CE" Grid.Row="1" Grid.Column="1" 
                    Click="CEButton_Click" Background="#FFAB91"/>
            <Button Content="⌫" Grid.Row="1" Grid.Column="2" 
                    Click="BackspaceButton_Click"/>
            <Button Content="÷" Grid.Row="1" Grid.Column="3" 
                    Click="OpButton_Click" Tag="/" Background="#4ECDC4"/>

            <!-- Строка 3 -->
            <Button Content="7" Grid.Row="2" Grid.Column="0" Click="DigitButton_Click"/>
            <Button Content="8" Grid.Row="2" Grid.Column="1" Click="DigitButton_Click"/>
            <Button Content="9" Grid.Row="2" Grid.Column="2" Click="DigitButton_Click"/>
            <Button Content="×" Grid.Row="2" Grid.Column="3" 
                    Click="OpButton_Click" Tag="*" Background="#4ECDC4"/>

            <!-- Строка 4 -->
            <Button Content="4" Grid.Row="3" Grid.Column="0" Click="DigitButton_Click"/>
            <Button Content="5" Grid.Row="3" Grid.Column="1" Click="DigitButton_Click"/>
            <Button Content="6" Grid.Row="3" Grid.Column="2" Click="DigitButton_Click"/>
            <Button Content="-" Grid.Row="3" Grid.Column="3" 
                    Click="OpButton_Click" Tag="-" Background="#4ECDC4"/>

            <!-- Строка 5 -->
            <Button Content="1" Grid.Row="4" Grid.Column="0" Click="DigitButton_Click"/>
            <Button Content="2" Grid.Row="4" Grid.Column="1" Click="DigitButton_Click"/>
            <Button Content="3" Grid.Row="4" Grid.Column="2" Click="DigitButton_Click"/>
            <Button Content="+" Grid.Row="4" Grid.Column="3" 
                    Click="OpButton_Click" Tag="+" Background="#4ECDC4"/>

            <!-- Нижняя строка -->
            <Button x:Name="ZeroButton" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" 
                    Content="0" Click="DigitButton_Click" Height="50"/>
            <Button Content="," Grid.Row="5" Grid.Column="2" 
                    Click="DotButton_Click" Height="50"/>
            <Button Content="=" Grid.Row="5" Grid.Column="3" 
                    Click="EqualsButton_Click" Height="50" Background="#26DE81"/>
        </Grid>
    </Grid>
</Window>
